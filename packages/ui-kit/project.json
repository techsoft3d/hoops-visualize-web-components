{
  "name": "ui-kit",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/ui-kit/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "staging/packages/ui-kit"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      },
      "dependsOn": [
        "test-coverage",
        "lint"
      ]
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "ui-kit:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "ui-kit:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "ui-kit:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "ui-kit:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "ui-kit:build:development"
        },
        "production": {
          "buildTarget": "ui-kit:build:production"
        }
      },
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "config": "packages/ui-kit/vite.config.ts"
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "packages/ui-kit/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "typecheck-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --noEmit --project packages/ui-kit/tsconfig.storybook.json"
        ]
      }
    },
    "test-coverage": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "packages/ui-kit/vite.config.ts",
        "coverage": {
          "enabled": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "test-storybook -c packages/ui-kit/.storybook --url=http://localhost:4400"
        ]
      },
      "configurations": {
        "ci": {
          "commands": [
            "test-storybook -c packages/ui-kit/.storybook --url=http://localhost:4400 --junit",
            "npx shx mv junit.xml functional_test_ui-kit.xml"
          ],
          "parallel": false
        },
        "development": {
          "commands": [
            "test-storybook -c packages/ui-kit/.storybook --url=http://localhost:4400"
          ]
        }
      }
    },
    "typedoc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx typedoc --options typedoc.json",
        "cwd": "packages/ui-kit",
        "args": [
          "--json",
          "../../docs/ui-kit/ui-kit-api.json"
        ]
      },
      "configurations": {
        "html": {
          "args": [
            "--out",
            "../../docs/ui-kit"
          ]
        }
      }
    }
  }
}
