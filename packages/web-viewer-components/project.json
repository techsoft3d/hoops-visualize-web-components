{
  "name": "web-viewer-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/web-viewer-components/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "staging/packages/web-viewer-components"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      },
      "dependsOn": [
        "lint",
        "test-coverage"
      ]
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web-viewer-components:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "web-viewer-components:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "web-viewer-components:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web-viewer-components:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "web-viewer-components:build:development"
        },
        "production": {
          "buildTarget": "web-viewer-components:build:production"
        }
      },
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "config": "packages/web-viewer-components/vite.config.ts"
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "packages/web-viewer-components/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "typecheck-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --noEmit --project packages/web-viewer-components/tsconfig.storybook.json"
        ]
      }
    },
    "test-coverage": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "packages/web-viewer-components/vite.config.ts",
        "coverage": {
          "enabled": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {},
      "configurations": {
        "ci": {
          "commands": [
            "test-storybook --maxWorkers 1 -c packages/web-viewer-components/.storybook --url=http://localhost:4400 --junit",
            "npx shx mv junit.xml functional_test_web-viewer-components.xml"
          ],
          "parallel": false
        },
        "development": {
          "command": "test-storybook --maxWorkers 1 -c packages/web-viewer-components/.storybook --url=http://localhost:4400"
        },
        "coverage": {
          "command": "test-storybook --maxWorkers 1 -c packages/web-viewer-components/.storybook --url=http://localhost:4400 --coverage"
        }
      },
      "defaultConfiguration": "ci"
    },
    "typedoc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx typedoc --options typedoc.json",
        "cwd": "packages/web-viewer-components",
        "args": [
          "--out",
          "../../docs/web-viewer-components"
        ]
      },
      "configurations": {
        "json": {
          "args": [
            "--json",
            "../../docs/web-viewer-components/api.json"
          ]
        }
      }
    }
  }
}
